<div class="authform">
  <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :role => 'form'}) do |f| %>
    <h3>Nova Conta</h3>
    <%= devise_error_messages! %>
    <div class="form-group">
      <%= f.label :primeiro_nome %>
      <%= f.text_field :first_name, :autofocus => true, id: 'user_primeiro_nome', class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= f.label :sobrenome %>
      <%= f.text_field :last_name, id: 'user_sobrenome', class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= f.label :email %>
      <%= f.email_field :email, class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= f.label :senha %>
      <%= f.password_field :password, id: 'user_senha', class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= f.label :confirmação_da_senha %>
      <%= f.password_field :password_confirmation, id: 'user_confirmação_da_senha', class: 'form-control' %>
    </div>
     <%= f.submit 'Criar conta', :class => 'button right' %>
  <% end %>
</div>